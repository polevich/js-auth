{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Вход</h1>

		<div class="form">
			<div class="form__item">
				{{> field action="signupForm.change" label="Электронный адрес" type="email" name="email" placeholder="Ваш email"}}
				<span name="email" class="form__error">Ошибка</span>
			</div>

			<div class="form__item">
				{{> field-password action="signupForm.change" label="Пароль" name="password" placeholder="Введите пароль"}}
				<span name="password" class="form__error">Ошибка</span>
			</div>

		<button onclick="signupForm.submit()" class="button button--disabled" type="button">Войти</button>
		
		<span class="alert alert--disabled" type="button">Внимание, ошибка!</span>
	
		<span class="link__prefix">Забыли пароль? <a href="/recovery" class="link">Восстановить</a></span>
	
	</form>
</div>

